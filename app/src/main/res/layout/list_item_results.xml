<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

   <TextView
     android:id="@+id/list_item_results_name"
     style="@style/TextResultStatistic"
     android:textStyle="bold"
     tools:background="@color/material_deep_teal_500"
     tools:text="Nombre"/>

   <TextView
    android:id="@+id/list_item_results_num_interventions"
    style="@style/TextResultStatistic"
    tools:background="@color/material_blue_grey_800"
    tools:text="Num intervenciones"/>

   <TextView
    android:id="@+id/list_item_results_time_interventions"
    style="@style/TextResultStatistic"
    tools:background="@color/material_deep_teal_200"
    tools:text="Num minutos"/>
</LinearLayout>